#!/usr/bin/env bash
# Script that configures Nginx server with a custom 404 page and 301 redirect

# Update package list and install nginx
apt-get update -y
apt-get install nginx -y

# Create a simple HTML page with "Holberton School"
echo "Holberton School for the win!" > /var/www/html/index.html

# Create custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure the 301 redirect for /redirect_me
sed -i '/listen 80 default_server;/a \    location /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }' /etc/nginx/sites-available/default

# Configure custom 404 page
sed -i '/listen 80 default_server;/a \    error_page 404 /404.html;\n    location = /404.html {\n        internal;\n    }' /etc/nginx/sites-available/default

# Restart nginx service (without using systemctl)
service nginx restart
